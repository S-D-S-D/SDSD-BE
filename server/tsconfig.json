{
    "compilerOptions": {
      "sourceMap": true,
      "target": "ES6",
      "outDir": "dist",
      "alwaysStrict": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true
      
    },
    "exclude": ["node_modules"],
  }

  